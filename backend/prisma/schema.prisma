generator db {
  provider = "go run github.com/prisma/prisma-client-go"
}

datasource db {
  provider = "sqlite"
  url      = "file:../pad.db"
}

model Admin {
  id       String @id
  login    String
  password String
}

model Category {
  id        String   @id
  name      String
  image_url String
  Product   Product[]
}

model Customer {
  id        String @id
  name      String
  email     String
  phone     String
  address   String
  region    String
  cc_number String
  Order     Order[]
}

model Order {
  id             String          @id
  amount         Int
  created_at     String
  customer_id    String?
  Customer       Customer?        @relation(fields: [customer_id], references: [id])
  OrderedProduct OrderedProduct[]
}

model OrderedProduct {
  id             String      @id
  amount         Int
  order_id       String?
  sub_product_id String?
  Order          Order?       @relation(fields: [order_id], references: [id])
  Sub_Product    Sub_Product? @relation(fields: [sub_product_id], references: [id])
}

model Product {
  id           String       @id
  name         String
  description  String
  manufacturer String
  fabric       String
  category_id  String?
  Category     Category?     @relation(fields: [category_id], references: [id])
  Image        Image[]
  Sub_Product  Sub_Product[]
}

model Sub_Product {
  id             String          @id
  price          Float
  size           String
  color          String
  amount         Int
  product_id     String?
  Product        Product?         @relation(fields: [product_id], references: [id])
  OrderedProduct OrderedProduct[]
}

model Image {
  id         String  @id
  url        String
  product_id String?
  Product    Product? @relation(fields: [product_id], references: [id])
}
